{
  "name": "@gramex/insighttree",
  "version": "2.0.0",
  "description": "The Insight Tree component breaks down a metric into a hierarchy (tree) and highlights the biggest drivers of that metric.",
  "type": "module",
  "module": "insighttree.js",
  "browser": "insighttree.min.js",
  "scripts": {
    "lint": "npx prettier --write index.js package.json '*.{css,yaml,md}' '{docs,app,tests}/*.{js,css,md}'",
    "watch": "esbuild index.js --format=esm --bundle --minify --allow-overwrite --sourcemap --outfile=insighttree.js --watch",
    "build-browser": "esbuild index.js --format=iife --global-name=gramex --bundle --sourcemap --minify --outfile=insighttree.min.js",
    "build-esm": "esbuild index.js --format=esm --bundle --minify --allow-overwrite --sourcemap --outfile=insighttree.js",
    "build": "npm run build-browser && npm run build-esm",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "files": [
    "README.md",
    "index.js",
    "subtotal.js",
    "insighttree.*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://code.gramener.com/cto/insighttree"
  },
  "keywords": [
    "hierarchy",
    "tree",
    "insight",
    "analysis",
    "gramex",
    "component"
  ],
  "author": "S Anand <root.node@gmail.com>",
  "contributors": [
    "Chandana Sagar <chandana.sagar@gramener.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://code.gramener.com/cto/insighttree/-/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://gramener.com/insighttree/",
  "prettier": {
    "printWidth": 120
  },
  "devDependencies": {
    "esbuild": "^0.17.12",
    "eslint": "^8.37.0",
    "eslint-plugin-html": "^7.1.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.0.3"
  }
}
